<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title><%=title%></title>

   <!-- font awesome cdn link  -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

   <!-- custom css file link  -->
   <link rel="stylesheet" href="/stylesheets/adminstyle.css">

</head>
<body>
   
<div class="container">
   <% data.forEach(function(product){ %>
      <div class="product-display">
         <table class="product-display-table">
           <thead>
           <tr>
              <th>Product Image</th>
              <th>Product Name</th>
              <th>Product Price</th>
              <th>Product Description</th>
              <th>action</th>
           </tr>
           </thead>
           <tr>
              <td><img src="<%=product.image.url%>" height="100" alt="Image"></td>
              <td><%=product.name%></td>
              <td><%=product.price%></td>
              <td><%=product.description%></td>
              <td>
                 <a href="<%=product.url%>/update" class="btn"> <i class="fas fa-edit"></i> edit </a>
                 <a href="<%=product.url%>/delete" class="btn"> <i class="fas fa-trash"></i> delete </a>
              </td>
           </tr>
         </table>
      </div>
   <%})%>
   

</div>


</body>
</html>