<%- include('../../partials/header'); %>
<%- include('../../partials/head'); %>
    
    <!--Service Section-->
<div class="hero-slider">
    <!-- Slider Item -->
    <div class="slider-item slide1" style="background-image:url(/images/spa/cosp1.jpg);">
      <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Slide Content Start -->
                <div class="content style text-center">
                  <h2 class="text-white text-bold mb-2">SHOP WITH US. COSMETICS JUST FOR YOU</h2>
                  <p class="tag-text mb-4">Your all in one arena,get products, get treatment.</p>
                  <a href="#" class="btn btn-main btn-white" data-animation-in="slideInLeft">explore</a>
                </div>
                <!-- Slide Content End -->
            </div>
        </div>
      </div>
    </div>
</div>


<!--start shop class-->
<div class="shop">
    <div class="row">

        <div class="container">
            <section style="background-color: #eee;">
                <div class="container py-5">
                  <!-- Item start-->
                  <% data.forEach(function(product) {%>
                    <div class="row justify-content-center mb-3">
                      <div class="col-md-12 col-xl-10">
                        <div class="card shadow-0 border rounded-3">
                          <div class="card-body">
                            <div class="row">
                              <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                  <img src="<%=product.image.url%>" class="w-100" />
                                  <a href="#!">
                                    <div class="hover-overlay">
                                      <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                    </div>
                                  </a>
                                </div>
                              </div>
                              <div class="col-md-6 col-lg-6 col-xl-6">
                                <h5><%=product.name%></h5>
                                <div class="mt-1 mb-0 text-muted small">
                                  <p><%=product.description%></p>
                                </div>
                              </div>
                              <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                <div class="d-flex flex-row align-items-center mb-1">
                                  <h4 class="mb-1 me-1">Ksh<%=product.price%></h4>
                                </div>
                                <h6 class="text-success">Free shipping</h6>
                                <div class="d-flex flex-column mt-4">
                                  <button class="btn btn-primary btn-sm" type="button">ADD TO CART</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <%})%>
                  <!--Item end-->

                </div>
              </section>
        </div>
    </div>
</div>

<!--end of shop class-->


<!--End Service Section-->

<%- include('../../partials/footer'); %>
