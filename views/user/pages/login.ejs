<%- include('../../partials/header'); %>
<%- include('../../partials/head'); %>

<% if (message1.length>0){ %>
  <div class="alert alert-success">
    <%=message1%>
  </div>
<%}%>

<% if (message2.length>0){ %>
  <div class="alert alert-success">
    <%=message2%>
  </div>
<%}%>

<div class="login">
    <div class="container">
        <form action="/auth/login" method="post">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="username">Username</label>
              <input type="text" id="username" name="uname" class="form-control" required>
            </div>
            <% if (message3.length>0){ %>
              <div class="alert alert-danger">
                <%=message3%>
              </div>
            <%}%>
          
            <!-- Password input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="password">Password</label>
              <input type="password" id="password" name="upass" class="form-control" minlength="8" maxlength="12" required>
            </div>
            <% if (message4.length>0){ %>
              <div class="alert alert-danger">
                <%=message4%>
              </div>
            <%}%>
          
            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
              <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="form2Example34" checked >
                  <label class="form-check-label" for="form2Example34"> Remember me </label>
                </div>
              </div>
          
              <div class="col">
                <!-- Simple link -->
                <a href="/password-reset">Forgot password?</a>
              </div>
            </div>
          
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
            
            <!-- Register buttons -->
            <div class="text-center">
              <p>Not a member? Register below</a></p>
            </div>
          </form>

          <form action="/auth/signup" method="post">
            <div class="form-outline mb-4">
              <label class="form-label" for="username">Username</label>
              <input type="text" id="username" name="uname" class="form-control" required >
            </div>
            <% if (message5.length>0){ %>
              <div class="alert alert-danger">
                <%=message5%>
              </div>
            <%}%>

            <div class="form-outline mb-4">
              <label class="form-label" for="email">Email address</label>
              <input type="email" id="email" name="uemail" class="form-control" required >
            </div>
            <% if (message6.length>0){ %>
              <div class="alert alert-danger">
                <%=message6%>
              </div>
            <%}%>

            <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
          </form>
    </div>
</div>

<%- include('../../partials/footer'); %>